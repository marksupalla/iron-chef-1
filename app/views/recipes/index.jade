extends ../shared/template
block content
  #controls
    #visibility
      button.grey#hide HIDE FORM
      button.grey#show SHOW FORM
    form(method='post', action='/recipes')
      select(name='category')
        option Favorites
        option Healthy Crap
        option Dessert
      input(name='name', type='text', placeholder='RECIPE NAME')
      input(name='photo', type='text', placeholder='IMAGE URL')
      input(name='ingredients', type='text', placeholder='INGREDIENTS')
      label DIRECTIONS
      textarea(name='directions')
      button.yellow ADD RECIPE

  ul#categories
    li: a.cat(href='#') All
    li: a.cat(href='#') Favorites
    li: a.cat(href='#') Healthy Crap
    li: a.cat(href='#') Dessert

  #recipes
    each recipe in recipes
      include recipe

block scripts

